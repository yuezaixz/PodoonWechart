<view class="index">
    <view class="head">
        <view  bindtap="bindViewTap" class="userinfo">
            <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </view>
        <view class="titleinfo">
            <view class="title">Podoon智能鞋垫</view>
            <view class="desc">连接Podoon后开始记录运动数据</view>
        </view>
    </view>
    <view class="body">
        <view class="widgets">
            <view class="widgets__item">
                <view>
                    <view class="widget">
                        <text class="widgets__info-name">距离</text>
                        <text class="widgets__info-data">{{distance}} 米</text>
                        <image class="widget__arrow" src="../index/resources/kind/canvas.png" background-size="cover" />
                        <view class="widget__line"></view>
                    </view>
                    <view class="widget">
                        <text class="widgets__info-name">步数</text>
                        <text class="widgets__info-data">{{stepCount}} 步</text>
                        <image class="widget__arrow" src="../index/resources/kind/view.png" background-size="cover" />
                        <view class="widget__line"></view>
                    </view>
                    <view class="widget">
                        <text class="widgets__info-name">步频</text>
                        <text class="widgets__info-data">{{stepFreq}} 步/分</text>
                        <image class="widget__arrow" src="../index/resources/kind/nav.png" background-size="cover" />
                        <view class="widget__line"></view>
                    </view>
                    <view class="widget">
                        <text class="widgets__info-name">触地时间</text>
                        <text class="widgets__info-data">{{gct}} 毫秒</text>
                        <image class="widget__arrow" src="../index/resources/kind/map.png" background-size="cover" />
                        <view class="widget__line"></view>
                    </view>
                    <view class="widget">
                        <text class="widgets__info-name">着地方式</text>
                        <text class="widgets__info-data">{{touchType}}</text>
                        <image class="widget__arrow" src="../index/resources/kind/content.png" background-size="cover" />
                        <view class="widget__line"></view>
                    </view>
                    <view class="widget">
                        <text class="widgets__info-name">内旋类型</text>
                        <text class="widgets__info-data">{{pronationType}}</text>
                        <image class="widget__arrow" src="../index/resources/kind/form.png" background-size="cover" />
                        <view class="widget__line"></view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="bottomBody" >
        <button class="bottomButton" bindtap="bindButtonTap">返回</button>
    </view>
</view>